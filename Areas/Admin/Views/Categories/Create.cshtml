@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model ShopProject.Models.Category
@{
    ViewBag.Title = "Добавление категории";
}
<form asp-action="Create"  asp-controller="Categories">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="  margin-bottom: 10px">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group"style="  margin-bottom: 10px">
        <select asp-items="@(new SelectList(ViewBag.Categories, nameof(Category.Id),
    nameof(Category.Name)))" asp-for="ParentCategoryId"></select>
    </div>
    <div class="form-group"style="  margin-bottom: 10px">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>
