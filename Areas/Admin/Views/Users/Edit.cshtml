@model ShopProject.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group" style="margin-top:15px !important;">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group" style="margin-top:15px !important;">
        <label asp-for="Name" class="control-label">Last Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group" style="margin-top:15px !important;">
        <label asp-for="LastName" class="control-label">Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group" style="margin-top:15px !important;">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
