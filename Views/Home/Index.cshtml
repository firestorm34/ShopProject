@model List<Good>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    

    <section class="image-section">
        <div class="main-image-wrapper ">

            <span class="main-picture-text">
                New Iphone 14 and
                Iphone 14 plus are now availabe!
            </span>

            <img style="width: 100%;" src="~/Iphone.png">

        </div>
    </section>

    <div class=" small-container">
        <div class="row">
            @if(Model!=null){
                foreach (var item in Model)

                {
                    string imgSrc = null;
                    if (item.MainImage != null)
                    {
                        var base64 = Convert.ToBase64String(item.MainImage);
                        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <div class="col-3  good-wrap">
                        <div class="good-item">
                            <div class="image-wrapper">
                                <img src="@imgSrc" alt="Good Image">
                            </div>
                            <p class="Name"> @item.Name</p>
                            <div class="rating" style="color:orange">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-half-o"></i>
                            </div>

                            <p class="price"> @item.Price $</p>
                            <div class="detail_link"> <a class="good-detail-link"
                            href="/Good/Detailed?good_id=@item.Id"> Detailed</a>
                            </div>
                            <a class="btn  btn-buy">Buy</a>

                            @if(ViewBag.Likes.ShowLike == true) {

                            if (ViewBag.Likes.IsLiked[@item.Id] == false)
                            {

                            <btn><a asp-action="LikeFromIndexGood" asp-controller="LikedGood" asp-route-good_id=@item.Id> Like </a></btn>

                            }

                            if (ViewBag.Likes.IsLiked[@item.Id] == true)
                            {

                            <btn>
                                <a class=" liked-anchor" asp-action="DislikeFromIndexGood" asp-controller="LikedGood"
                           asp-route-good_id="@item.Id"> Liked </a>
                            </btn>

                            }
                            
                            }
                            
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</body>
</html>
<style>
    .detail_link {
        margin-bottom: calc(4px + 0.25vw);
    }
    .row {
        justify-content: flex-start !important;
    }
    .col-3 {
        flex: 0 0 auto;
    }
</style>